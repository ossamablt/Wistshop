rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all users
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Allow write access to authenticated users with basic validation
    match /{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
} 